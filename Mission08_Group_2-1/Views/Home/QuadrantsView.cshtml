}

@model List<Mission08_Group_2_1.Models.Task>

<h1>This is where you can view your tasks</h1>
<br />
    


<div class="container text-center">
    <div class="row">
        <div class="col">
            <h2>Quadrant 1</h2>
            <p>Important and Urgent</p>
            <table class="table-bordered m-2">
                <tr>
                    <th>Task</th>
                    <th>Due Date</th>
                    <th>Category</th>
                    <th>Completed</th>
                    <th>Edit/Delete</th>
                </tr>
                @foreach (var data in Model)
                {
                    @if (data.Quadrant == 1)
                    {
                        @if (data.Completed == false)
                        {
                            <tr>
                                <td>@data.Name</td>
                                <td>@data.DueDate</td>
                                <td>@data.TaskCategory.Name</td>
                                <td><a asp-controller="Home" asp-action="Checked" asp-route-taskid="@data.Id" class="btn btn-light">Mark as Complete</a></td>
                                <td>
                                    <a asp-controller="Home" asp-action="Edit" asp-route-taskid="@data.Id" class="btn btn-light">Edit</a>
                                    <a asp-controller="Home" asp-action="Delete" asp-route-taskid="@data.Id" class="btn btn-light">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                }
